<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/EventsConstraint"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageEvents"
                android:layout_width="@dimen/dp_150"
                android:layout_height="250dp"
                android:background="@drawable/bg_rounded_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvEventsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        android:maxLines="2"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:text="Manish Kumar Manish kuma manish kumar"/>

    <TextView
        android:id="@+id/tvEventsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/tvEventsTitle"
        app:layout_constraintTop_toBottomOf="@id/tvEventsTitle"
        android:text="Music"/>

    <TextView
        android:id="@+id/tvEventsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/tvEventsTitle"
        app:layout_constraintTop_toBottomOf="@id/tvEventsCategory"
        android:text="FREE"/>

</androidx.constraintlayout.widget.ConstraintLayout>