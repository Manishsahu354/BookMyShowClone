<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaithanya.bookmyshow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookMyShow">
        <activity android:name=".views.initialScreens.LocationSelectionActivity"></activity>
        <activity android:name=".views.initialScreens.LogoutActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".views.initialScreens.LanguageSelectionActivity" />
        <activity android:name=".views.initialScreens.LoginActivity" />
        <activity android:name=".ui.activity.EventsActivity"></activity>
        <activity android:name=".ui.activity.StreamActivity" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".views.initialScreens.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>